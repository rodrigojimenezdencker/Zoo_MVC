
@{
    string Pagina = "Añadir foto";
    ViewData["Title"] = Pagina;
}

<h2 class="text-center">@Pagina</h2>
<hr />
    <div>
        <form asp-action="AddPhoto" asp-route-id="@ViewBag.Id" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label">Foto:</label>
                <input type="file" name="Photo" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Añadir" class="btn btn-success" />
            </div>
        </form>
    </div>
<div>
    <a class="btn bg-secondary text-white" asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
