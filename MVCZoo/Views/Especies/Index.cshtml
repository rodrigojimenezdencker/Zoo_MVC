@model IEnumerable<MVCZoo.Models.Especie>

@{
    string Pagina = "Especies";
    ViewData["Title"] = Pagina;
}

<h1 class="text-center">@Pagina</h1>

<p>
    <a class="btn btn-success shadow" asp-action="Create"><i class="fas fa-plus"></i> <strong>Crear nuevo</strong></a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Foto)
            </th>
            <th>
                Nombre común
            </th>
            <th>
                Nombre científico
            </th>
            <th>
                Descripción
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img style="border-radius: 50%;" width="100" height="100" src="~/img/@(item.Id).jpg" alt="@item.Foto" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Comun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Cientifico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" style="width: 44%;" class="btn btn-primary">Editar</a>
                <a asp-action="AddPhoto" asp-route-id="@item.Id" style="width: 44%;" class="btn btn-info">Añadir foto</a>
                <a asp-action="Details" asp-route-id="@item.Id" style="width: 44%;" class="btn btn-secondary">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.Id" style="width: 44%;" class="btn btn-danger">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
