@model MVCZoo.Models.Habitat

@{
    ViewData["Title"] = "Detalles";
}

<h1 class="text-center">Detalles</h1>

<div>
    <h4>Habitat</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clima)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clima)
        </dd>
        <dt class="col-sm-2">
            Vegetación
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vegetacion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Itinerario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Itinerario.Codigo)
        </dd>
    </dl>
</div>
<div>
    <h2>Especies de este hábitat:</h2>
    @if (Model.Viven.Count == 0)
    {
        <p class="text-danger">No hay ningún animal asignado a este hábitat.</p>
    }
    <ul class="list-group">
        @foreach (var c in Model.Viven)
        {
            <li class="list-group-item"><a asp-controller="Especies" asp-action="Details" asp-route-id="@c.Especie.Id">@c.Especie.Nombre_Comun</a></li>
        }
    </ul>
</div>
<hr />
<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Añadir especie
</button>
<div class="collapse" id="collapseExample">

    <form asp-action="AddEspecie" asp-route-id="@Model.Id" method="post">

        <div class="form-group">
            <label class="control-label">Especie:</label>
            <select name="EspecieId" class="form-control" asp-items="ViewBag.EspecieId"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Añadir" class="btn btn-default bg-success text-white" />
        </div>
    </form>
</div>
<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn-primary btn">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
