@model MVCZoo.Models.Itinerario

@{
    ViewData["Title"] = "Eliminar itinerario";
}
<h3>¿Confirma que desea eliminar este itinerario?</h3>

<div>
    <h4>Itinerario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Código
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Codigo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Visitantes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Visitantes)
        </dd>
        <dt class="col-sm-2">
            Duración
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Duracion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Longitud)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Longitud)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-primary" asp-action="Index">Volver a la lista</a>
    </form>
</div>
