@{
    ViewData["Title"] = "Inicio";
}

    <div class="text-center">
        <h1 class="display-4">Bienvenido al zoo</h1>
        <div class="row">
            <div class="col-4">
                <a asp-action="Index" asp-controller="Habitats" class="btn btn-primary text-white">Ver hábitats</a>
            </div>
            <div class="col-4">
                <a asp-action="Index" asp-controller="Especies" class="btn btn-primary text-white">Ver especies</a>
